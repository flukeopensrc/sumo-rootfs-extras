                "sequence": "A8_SUPPLY_ALL_OFF"
            },
            {
                "description": "",
                "operation": "exec",
                "sequence": "TOGGLE_FAULT_CLR"
            },
            {
                "description": "",
                "operation": "exec",
                "sequence": "A6_INIT"
            },
            {
                "description": "",
                "operation": "exec",
                "sequence": "A14_INIT"
            },
            {
                "description": "",
                "operation": "exec",
                "sequence": "A8_INIT"
            },
            {
                "description": "",
                "operation": "exec",
                "sequence": "A7_INIT"
