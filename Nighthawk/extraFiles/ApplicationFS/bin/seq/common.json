{
    "SYS_DORM": {
        "description": "Put the system in the power up (dormant) state (TODO: add more boards)",
        "steps": [
            {
                "description": "Set the DACs on the A6 to zero",
                "operation": "exec",
                "sequence": "A6_ZERO_DACS"
            },
            {
                "description": "Put the A8 into known safe state",
                "operation": "exec",
                "sequence": "A8_DORM"
            },
            {
                "description": "set A6 switches to dormant",
                "operation": "exec",
                "sequence": "A6_DORM"
            },
            {
                "description": "set the A14 to dormant",
                "operation": "exec",
                "sequence": "A14_DORM"
            },
            {
                "description": "set the A7 to dormant",
                "operation": "exec",
                "sequence": "A7_DORM"
            }
        ]
    },
    "SYS_INIT": {
