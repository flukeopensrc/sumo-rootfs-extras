{
    "DELAY_1SEC": {
        "description": "Delay 1 second",
        "steps": [
            {
                "description": "",
                "operation": "delay",
                "value": "0x3E8"
            }
        ]
    },
    "DISABLE_HAZARDOUS_HARDWARE": {
        "description": "Disables hazardous hardware in the event of a fault",
        "steps": [
            {
                "description": "",
                "mask": "0x04",
                "operation": "modify",
                "register": "P7P2",
                "value": "0x0"
            },
            {
                "description": "",
                "operation": "write",
                "register": "A8190EN",
                "value": "0x0"
            },
            {
                "description": "",
                "operation": "write",
                "register": "A8HVEN",
                "value": "0x0"
            },
            {
                "description": "",
                "mask": "0x02",
                "operation": "modify",
                "register": "P7P2",
                "value": "0x02"
            }
        ]
    },
    "SYS_DORM": {
        "description": "Put the system in the power up (dormant) state (TODO: add more boards)",
        "steps": [
            {
                "description": "Set the DACs on the A6 to zero",
                "operation": "exec",
                "sequence": "A6_ZERO_DACS_QUICK"
            },
            {
                "description": "Put the A8 into known safe state",
                "operation": "exec",
                "sequence": "A8_DORM"
            },
            {
                "description": "set A6 switches to dormant",
                "operation": "exec",
                "sequence": "A6_DORM"
            },
            {
                "description": "set the A14 to dormant",
                "operation": "exec",
                "sequence": "A14_DORM"
            },
            {
                "description": "set the A7 to dormant",
                "operation": "exec",
                "sequence": "A7_DORM"
            },
            {
                "description": "set the A4 to dormant",
                "operation": "exec",
                "sequence": "A4_DORM"
            }
        ]
    },
    "SYS_INIT": {
        "description": "Initialize all analog hardware (TODO: add more boards)",
        "steps": [
            {
                "description": "",
                "operation": "exec",
                "sequence": "A8_SUPPLY_ALL_OFF"
            },
            {
                "description": "",
                "operation": "exec",
                "sequence": "TOGGLE_FAULT_CLR"
            },
            {
                "description": "",
                "operation": "exec",
                "sequence": "A6_INIT"
            },
            {
                "description": "",
                "operation": "exec",
                "sequence": "A14_INIT"
            },
            {
                "description": "",
                "operation": "exec",
                "sequence": "A8_INIT"
            },
            {
                "description": "",
                "operation": "exec",
                "sequence": "A7_INIT"
            },
            {
                "description": "",
                "operation": "exec",
                "sequence": "A6_DORM"
            },
            {
                "description": "",
                "operation": "exec",
                "sequence": "TOGGLE_FAULT_CLR"
            }
        ]
    },
    "TOGGLE_FAULT_CLR": {
        "description": "This should clear all fault sources.",
        "steps": [
            {
                "description": "",
                "mask": "0x04",
                "operation": "modify",
                "register": "P6PORTB",
                "value": "0x04"
            },
            {
                "description": "",
                "mask": "0x04",
                "operation": "modify",
                "register": "P6PORTB",
                "value": "0x00"
            }
        ]
    }
}
